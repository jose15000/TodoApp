@model TodoApp.Models.Todo

<h1 class="text-light">Adicionar tarefa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Novatarefa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Nome" class="form-control bg-dark text-light" placeholder="Nome" autocomplete="off" />
                <div class="invalid-feedback"></div>
                <span asp-validation-for="Nome" class="text-danger "></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Prazo" class="control-label text-light"></label>
                <input asp-for="Prazo" class="form-control bg-dark text-light" autocomplete="off" />
                <span asp-validation-for="Prazo" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div><br />

<div>
    <a asp-action="Index" class="btn btn-success">Voltar para a tabela</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
